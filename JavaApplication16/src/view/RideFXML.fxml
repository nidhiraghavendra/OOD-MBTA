<AnchorPane prefHeight="411.0" prefWidth="688.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RideFXMLController">
   <children>
      <TabPane minHeight="-Infinity" prefHeight="500.0" prefWidth="739.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="rideBookingTab" text="RIDE Booking">
               <content>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="rideTableView" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="347.0" prefWidth="688.0">
                          <columns>
                            <TableColumn fx:id="colSource" minWidth="120.0" prefWidth="75.0" text="Source" />
                            <TableColumn fx:id="colDestination" minWidth="120.0" prefWidth="146.0" text="Destination" />
                              <TableColumn fx:id="colDistance" minWidth="120.0" prefWidth="149.0" text="Distance" />
                              <TableColumn fx:id="colDuration" minWidth="120.0" prefWidth="137.0" text="Duration" />
                          </columns>
                        </TableView>
                        <Button fx:id="btnBook" layoutX="294.0" layoutY="376.0" mnemonicParsing="false" onAction="#btnBookOnClick" prefHeight="25.0" prefWidth="100.0" text="Book" />
                     </children>
                  </Pane>
               </content>
            </Tab>
          <Tab fx:id="rideHistoryTab" onSelectionChanged="#rideHistoryClicked" text="RIDE History">
               <content>
                  <Pane>
                     <children>
                        <TableView fx:id="rideHistoryTableView" layoutX="1.0" prefHeight="385.0" prefWidth="739.0">
                          <columns>
                            <TableColumn fx:id="sourceHistoryCol" minWidth="120.0" prefWidth="75.0" text="Source" />
                            <TableColumn fx:id="destinationHistoryCol" minWidth="99.0" prefWidth="99.0" text="Destination" />
                              <TableColumn fx:id="distanceHistoryCol" minWidth="78.0" prefWidth="78.0" text="Distance" />
                              <TableColumn fx:id="durationHistoryCol" prefWidth="89.0" text="Duration" />
                              <TableColumn fx:id="totalCol" minWidth="93.33331298828125" prefWidth="133.0" text="Amount" />
                              <TableColumn fx:id="statusCol" prefWidth="98.0" text="Status" />
                              <TableColumn fx:id="agentHistoryCol" prefWidth="107.0" text="Ride Agent" />
                          </columns>
                        </TableView>
                        <Button fx:id="markBtn" layoutX="289.0" layoutY="404.0" mnemonicParsing="false" onAction="#markBtnClicked" prefHeight="39.0" prefWidth="176.0" text="MARK RIDE COMPLETED" textFill="#6434dd" />
                     </children>
                  </Pane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
